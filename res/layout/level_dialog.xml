<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
			  android:minWidth="250dp" 
			  android:minHeight="200dp"          
              android:padding="10dp"
              android:background="@drawable/dialog_background"
              >

    
    <TextView
        android:id="@+id/dialog_title"
        android:textSize="22sp"
        android:textColor="#b5b5b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingLeft="7dp"
        android:layout_margin="5dp" />
    
    <TextView
        android:id="@+id/dialog_time"
        android:textSize="14sp"
        android:textColor="#b5b5b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:layout_margin="4dp" />

    <TextView
        android:id="@+id/dialog_date"
        android:textSize="14sp"
        android:textColor="#b5b5b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:layout_margin="4dp" />

    <TextView
        android:id="@+id/dialog_target_time"
        android:textSize="14sp"
        android:textColor="#b5b5b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:layout_margin="4dp" />

    <TextView
        android:id="@+id/dialog_theme"
        android:textSize="14sp"
        android:textColor="#b5b5b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:paddingBottom="10dp"
        android:layout_margin="4dp" />
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="7dp"
            android:layout_height="match_parent" 
            android:gravity="bottom|left">

            <Button
                android:id="@+id/dialog_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:text="@string/level_dialog_help" 
                android:background="@drawable/levelbutton_retro" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
			android:padding="7dp"
            android:layout_height="match_parent" 
            android:gravity="bottom|right">

            <Button
                android:id="@+id/dialog_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:text="@string/level_dialog_play_level"
                android:background="@drawable/levelbutton_retro" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>